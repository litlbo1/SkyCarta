<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SkyCarta" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/main_blue</item>
        <item name="android:navigationBarColor">@color/main_blue</item>
        <!-- Customize icon colors -->
        <item name="colorControlNormal">@color/black</item> <!-- Цвет иконок в нормальном состоянии -->
        <item name="colorControlActivated">@color/black</item> <!-- Цвет иконок в активированном состоянии -->
        <item name="colorControlHighlight">@color/black</item> <!-- Цвет иконок при выделении -->
    </style>

    <style name="Theme.SkyCarta" parent="Base.Theme.SkyCarta" />

    <style name="Theme.SkyCarta.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.SkyCarta.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.SkyCarta.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
